@model IEnumerable<Project.Models.ProductModel>

@{
    ViewData["Title"] = "Producten";
}


@Html.DropDownListFor(model => model.SupplierId, (MultiSelectList)ViewBag.suppliers, new{@class = "listbox"})


@Html.ActionLink("Bekijk alle producten", "Index", new{ id=""})


<div class="h1-nodec mt-5">
    <h1>Producten</h1>
</div>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordered)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{    
        @if(item.AmountInStock <= 5 && item.AmountInStock > 0)
        {
            <tr class="table-warning">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountInStock)
                </td>
                <td class="cursor-notAllowed">
                    @Html.DisplayFor(modelItem => item.Ordered)
                </td>
                <td>
                    <div class="row float-end justify-content-end pe-4">

                        <div class="col-2">
                            <a href="@Url.Action("Edit", "Product", new { id=item.Id })">
                                <img src="~/img/iconEdit.png">
                            </a>
                        </div>

                        <div class="col-2 ms-2 me-2">
                            <a href="@Url.Action("Details", "Product", new { id=item.Id })">
                                <img src="~/img/iconDetail.png">
                            </a>
                        </div>

                            <div class="col-2">
                            <a href="@Url.Action("Delete", "Product", new { id=item.Id })">
                                <img src="~/img/iconDelete.png">
                            </a>
                        </div>

                    </div>
                </td>
            </tr>
        }
        else if(item.AmountInStock == 0)
        {
            <tr class="table-danger">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountInStock)
                </td>
                <td class="cursor-notAllowed">
                    @Html.DisplayFor(modelItem => item.Ordered)
                </td>
                <td>
                    <div class="row float-end justify-content-end pe-4">

                        <div class="col-2">
                            <a href="@Url.Action("Edit", "Product", new { id=item.Id })">
                                <img src="~/img/iconEdit.png">
                            </a>
                        </div>

                        <div class="col-2 ms-2 me-2">
                            <a href="@Url.Action("Details", "Product", new { id=item.Id })">
                                <img src="~/img/iconDetail.png">
                            </a>
                        </div>

                            <div class="col-2">
                            <a href="@Url.Action("Delete", "Product", new { id=item.Id })">
                                <img src="~/img/iconDelete.png">
                            </a>
                        </div>

                    </div>
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountInStock)
                </td>
                <td class="cursor-notAllowed">
                    @Html.DisplayFor(modelItem => item.Ordered)
                </td>
                <td>
                    <div class="row float-end justify-content-end pe-4">

                        <div class="col-2">
                            <a href="@Url.Action("Edit", "Product", new { id=item.Id })">
                                <img src="~/img/iconEdit.png">
                            </a>
                        </div>

                        <div class="col-2 ms-2 me-2">
                            <a href="@Url.Action("Details", "Product", new { id=item.Id })">
                                <img src="~/img/iconDetail.png">
                            </a>
                        </div>

                        <div class="col-2">
                            <a href="@Url.Action("Delete", "Product", new { id=item.Id })">
                                <img src="~/img/iconDelete.png">
                            </a>
                        </div>

                    </div>
                </td>
            </tr>
        }          
}
    </tbody>
</table>

