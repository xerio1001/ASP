@model IEnumerable<Project.Models.ProductModel>

@{
    ViewData["Title"] = "Producten";
}

<h1>Producten</h1>

<p>
    <a asp-action="Create">Voeg toe</a>
</p>

<table class="table table-striped table-hover">
    <thead>
            <tr>
                <th>
                    Leverancier
                </th>
            </tr>
        </thead>

        <tr>
            <td>Bekijk ze allemaal</td>
            <td>@Html.ActionLink("Bekijk alle producten", "Index", new{ id="" })</td>
        </tr>

        @foreach(var item in ViewBag.displaySuppliers)
        {
            <tr>
                <td>
                    @item.Supplier
                </td>
                <td>
                    @Html.ActionLink("Bekijk al mijn producten", "Index", new{ id=item.Id })
                </td>
            </tr>
        }
</table>

<table class="table table-hover table-bordered border-dark">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountInStock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        
    @if(item.AmountInStock <= 5 && item.AmountInStock > 0)
    {
        <tr class="table-warning">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountInStock)
            </td>
            <td>
                @Html.ActionLink("Pas aan", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Verwijder", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    else if(item.AmountInStock == 0)
    {
        <tr class="table-danger">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountInStock)
            </td>
            <td>
                @Html.ActionLink("Pas aan", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Verwijder", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountInStock)
            </td>
            <td>
                @Html.ActionLink("Pas aan", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Verwijder", "Delete", new { id=item.Id })
            </td>
        </tr>
    }          
}
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index"><span id="home-link">Home</span></a>
