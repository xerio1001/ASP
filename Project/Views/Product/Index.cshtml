@model IEnumerable<Project.Models.ProductModel>

@{
    ViewData["Title"] = "Producten";
}

<h1>Producten</h1>

<p>
    <a asp-action="Create">Voeg toe</a>
</p>

<table class="table table-stripped table-hover">
    <thead>
            <tr>
                <th>
                    Leverancier
                </th>
            </tr>
        </thead>
        @foreach(var item in ViewBag.displaySuppliersName)
        {
            <tr>
                <td>
                     @item
                </td>
                <td>
                     @Html.ActionLink("Bekijk al mijn producten", "Index", new{ id=item})
                </td>
            </tr>
        }
    <div class="form-group">
        <input type="submit" value="Change" class="btn btn-primary" />
    </div>
</table>

<table class="table table-stripped table-hover">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountInStock)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Barcode)
            </th>*@
@*            <th>
                @Html.DisplayNameFor(model => model.SupplierId)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountInStock)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.Barcode)
            </td>*@
@*            <td>
                @Html.DisplayFor(modelItem => item.SupplierId)
            </td>*@
            <td>
                @Html.ActionLink("Pas aan", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Verwijder", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

