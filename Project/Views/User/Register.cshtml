@model Project.Models.UserModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row h1-nodec">
        <div class="col-12 text-center">
            <h1>Registreer</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-3"><!--Filler--></div>

        <div class="col-6">
            <form asp-action="Register">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div id="emailHelp" class="form-text">
                        Uw E-mail adres wordt alleen gebruikt voor in te loggen.
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Wachtwoord"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registreer" class="btn btn-primary" />
                </div>
                </form>
        </div>

        <div class="col-3"><!--Filler--></div>
    </div>

</div>
