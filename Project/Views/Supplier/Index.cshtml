@model IEnumerable<Project.Models.SupplierModel>

@{
    ViewData["Title"] = "Leveranciers";
}

<h1>Leveranciers</h1>

<p>
    <a asp-action="Create">Voeg toe</a>
</p>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phonenumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Supplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phonenumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                <div class="row" style="text-align: right;">

                    <div class="col-2 me-2">
                        <a href="@Url.Action("Edit", "Supplier", new { id=item.Id })">
                            <img src="~/img/iconEdit.png">
                        </a>
                    </div>

                    <div class="col-2">
                        <a href="@Url.Action("Delete", "Supplier", new { id=item.Id })">
                            <img src="~/img/iconDelete.png">
                        </a>
                    </div>

                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index"><span id="home-link">Home</span></a>
